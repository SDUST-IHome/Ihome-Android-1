<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/subpage_title_bar"
        android:id="@+id/include" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:layout_gravity="center_vertical"
        android:background="@drawable/pingmiantu"
        android:layout_below="@+id/include" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="客厅"
        android:id="@+id/button1"
        android:textColor="@color/abc_search_url_text_normal"
        android:background="#00000000"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_above="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="洗手间"
        android:id="@+id/button2"
        android:layout_below="@+id/include"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:textColor="@color/main_blue_light"
        android:background="#00000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="洗手间"
        android:id="@+id/button3"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:textColor="@color/error_color"
        android:background="#00000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="洗手间"
        android:id="@+id/button4"
        android:textColor="@color/abc_search_url_text_pressed"
        android:background="#00000000"
        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="厨房"
        android:id="@+id/button5"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button3"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:textColor="@android:color/holo_orange_light"
        android:background="#00000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="客厅"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="45dp"
        android:textColor="@android:color/holo_purple"
        android:background="#00000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="厨房"
        android:id="@+id/button7"
        android:textColor="@android:color/tertiary_text_light"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

</RelativeLayout>
