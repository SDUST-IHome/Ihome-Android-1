<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_page_white"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include layout="@layout/subpage_title_bar"
            android:id="@+id/include" />

        <ScrollView
            android:id="@+id/widget54"
            android:background="@color/color_page_white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_below="@+id/include">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/include"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/relativeLayout_first"
                    android:layout_weight="2.15">

                    <EditText
                        android:id="@+id/login_text_user"
                        android:background="@color/color_btn_white"
                        android:drawableLeft="@drawable/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:singleLine="true"
                        android:hint="用户名"
                        android:textColor="#000"/>

                    <EditText
                        android:id="@+id/login_text_pwd"
                        android:background="@color/color_btn_white"
                        android:drawableLeft="@drawable/pwd"
                        android:layout_marginTop="7px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_text_user"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:hint="密码"
                        android:textColor="#000"/>

                    <Button
                        android:id="@+id/login_btn_login"
                        android:background="@drawable/selector_ok_button"
                        android:textColor="@color/color_btn_text"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:text="确定"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="7px"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/login_text_pwd"
                        android:layout_toRightOf="@+id/login_btn_regist"
                        android:layout_toEndOf="@+id/login_btn_regist" />

                    <Button
                        android:id="@+id/login_btn_regist"
                        android:background="@drawable/selector_ok_button"
                        android:textColor="@color/color_btn_text"
                        android:visibility="invisible"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:text="注册"
                        android:layout_alignTop="@+id/login_btn_login"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true" />


                </RelativeLayout>
                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/webView"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>